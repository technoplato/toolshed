# =============================================================================
# DOCKERFILE: InstantDB Proxy (TypeScript)
# =============================================================================
#
# HOW:
#   # Build and run via docker compose (recommended)
#   docker compose up -d instant-proxy
#
#   # Build standalone
#   docker build -f Dockerfile.instant-proxy -t instant-proxy ../..
#
#   # Run standalone
#   docker run -p 3001:3001 \
#     -e INSTANT_APP_ID=your-app-id \
#     -e INSTANT_ADMIN_SECRET=your-secret \
#     instant-proxy
#
# WHO:
#   Claude AI, User
#
# WHAT:
#   Builds a lightweight container for the InstantDB TypeScript proxy.
#   Uses Bun runtime for fast startup and low memory footprint.
#
# WHEN:
#   2025-12-08
#   Last Modified: 2025-12-09
#   [Change Log:
#     - 2025-12-09: Renamed from Dockerfile.instant-server to Dockerfile.instant-proxy
#   ]
#
# WHERE:
#   apps/speaker-diarization-benchmark/Dockerfile.instant-proxy
#
# WHY:
#   Containerizing the server ensures:
#   - Consistent runtime environment across machines
#   - Easy deployment alongside PostgreSQL
#   - No need for local Node.js/Bun installation
#   - Healthchecks and restart policies via Docker
# =============================================================================

FROM oven/bun:1 AS base
WORKDIR /app

# Install dependencies (from root package.json)
FROM base AS deps
COPY package.json bun.lockb* ./
RUN bun install --frozen-lockfile || bun install

# Runtime stage
FROM base AS runtime

# Copy node_modules from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy the server file directly
COPY apps/speaker-diarization-benchmark/ingestion/instant_proxy.ts ./instant_proxy.ts

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Environment variables (override via docker-compose or -e flags)
ENV PORT=3001
ENV INSTANT_APP_ID=""
ENV INSTANT_ADMIN_SECRET=""

EXPOSE 3001

# Health check
HEALTHCHECK --interval=10s --timeout=5s --retries=3 --start-period=10s \
  CMD curl -f http://localhost:3001/health || exit 1

# Run the server
CMD ["bun", "run", "instant_proxy.ts"]